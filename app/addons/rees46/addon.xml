						<translations>
							<item lang="en">Information</item>
						</translations>
					</item>
					<item id="rees46_info">
						<type>info</type>
						<handler>fn_rees46_generate_info</handler>
					</item>
					<item id="rees46_settings_header">
						<name>Настройка модуля</name>
						<type>header</type>
